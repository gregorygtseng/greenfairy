{
  "manifest_version": 2,
  "name": "Green Fairy",
  "description": "This extension displays a simple climate ranking for the website you are currently on",
  "version": "0.2",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent" : false
  },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://api.climatecounts.org/",
    "tabs"
  ]
}
